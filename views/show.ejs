<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %>></div>
    <div class="ui top attached segment">
        <div class="item">
            <img src="<%= blog.image %>" class="ui large rounded left image">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <a href="/blogs/<%= blog._id %>/edit" class="ui blue right labeled icon button">Edit<i class="edit icon"></i></a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red right labeled icon button">Delete<i class="trash alternate icon"></i></button>
            </form>
            </div>
        </div>
    </div>

</div>
<% include ./partials/header %>